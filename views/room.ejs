    ></script>
    <script>
      const myname = "<%= Myname %>";
      const roomId = "<%= roomid %>";
      const roomName = "<%= roomName %>";
    </script>
  </head>

  <body>
    <script>
      function invite() {
        let invitebtn = document.getElementById("invite");
        let inviteID = document.getElementById("invite-info");
        if (inviteID.style.display === "block") {
          inviteID.style.display = "none";
        } else {
          inviteID.style.display = "block";
        }
      }
    </script>

      
    <div class="modal fade" id="getCodeModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content" style="color: black;">
                <div class="modal-header">
                    <h4 class="modal-title">Invite People</h4>
                </div>
                <div class="modal-body">
                    <p id="roomid"><strong><%= roomid %></p>
                    
                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white" onclick="cancel()">Close</button>
                    <button type="button" class="btn btn-primary" onclick="copy()">Copy</button>
                </div>
            </div>
        </div>
    </div>

    <div id="mainclone" style="display: block">
      <div class="navbar-room">
        <div class="navbar-left-room">
          <a href="/">
            <button class="button-85">
              <i
                class="fa-solid fa-graduation-cap fa-lg"
                style="color: #ffffff"
              ></i>
              StudyHub
            </button>
          </a>
        </div>
        <div class="header">
          <h3><%=roomName %></h3>
        </div>
        <div class="navbar-right-room">
          <div class="nav-items-room">
            <div class="bg-flex">
              <button class="button-85" onclick="changeBackground()">
                <i class="fa-solid fa-image fa-lg" style="color: #ffffff"></i>
              </button>
            </div>
            <div id="backgrounds">
              <button
                class="bg-btns"
                onclick="rainBg()"
                style="cursor: pointer"
              >
                City
              </button>
              <button
                class="bg-btns"
                onclick="treeBg()"
                style="cursor: pointer"
              >
                Tree
              </button>
              <button
                class="bg-btns"
                onclick="firefliesBg()"
                style="cursor: pointer"
              >
                fireflies
              </button>
              <button class="bg-btns" onclick="seaBg()" style="cursor: pointer">
                Sea
              </button>
              <button
                class="bg-btns"
                onclick="laptopBg()"
                style="cursor: pointer"
              >
                Laptop
              </button>
              <button
                class="bg-btns"
                onclick="cityBg()"
                style="cursor: pointer"
              >
                Rain
              </button>
            </div>
          </div>

          <div class="nav-items-room">
            <button class="button-85" onclick="music()">
              <i class="fa-solid fa-music fa-lg" style="color: #ffffff"></i>
            </button>
            <div class="spotify-flex">
              <div id="spotify-player" style="display: none">
                <div class="button-flex">
                  <label for="spotifyUrl">Enter Spotify URL:</label>
                  <input
                    type="text"
                    id="spotifyUrl"
                    placeholder="https://open.spotify.com/playlist/your_playlist_id"
                  />

                  <!-- Button to update the Spotify player with the user's input -->
                  <button
                    class="button-11"
                    style="color: white; text-align: center"
                    onclick="updateSpotifyPlayer()"
                  >
                    Update Player
                  </button>

                  <!-- Container for the Spotify player -->
                  <div id="spotifyPlayer"></div>
                </div>
              </div>
            </div>
          </div>
          <div class="nav-items-room">
            <button class="button-85">
              <i class="fa-solid fa-gamepad fa-lg" style="color: #ffffff"></i>
            </button>
          </div>
        </div>
      </div>

      <div class="timer-div"><%- include('timer.ejs') %></div>

      <div class="main_left">
        <div class="main_videos">
          <div id="video-grids"></div>
        </div>
      </div>
      <div class="main_right" id="chat">
        <div class="main_right_header">
          <h6>Chat Area</h6>
        </div>

        <div class="main__chat_window" id="main__chat_window">
          <ul class="messages" id="messageadd"></ul>
        </div>

        <div class="main__message_container">
          <input
            type="text"
            id="chat_message"
            onkeydown="sendmessage(this)"
            placeholder="Type message here.."
          />
        </div>
      </div>
      <div class="main_controls">
        <div class="main_controls_block">
          <div class="main_controls_button" id="mic" onclick="muteUnmute()">
            <i class="fas fa-microphone-slash"></i>
            <span>Mute</span>
          </div>

          <div
            class="main_controls_button"
            id="video"
            onclick="VideomuteUnmute()"
          >
            <i class="fas fa-video-slash"></i>
            <span>Stop Video</span>
          </div>
        </div>
        <div class="main_controls_block">
          <div class="main_controls_button" onclick="invitebox()">
            <i class="fas fa-user-plus"></i>
            <span>Invite</span>
          </div>
          <div class="main_controls_button">
            <i class="fas fa-user-friends"></i>
            <span>Participants</span>
          </div>
          <div class="main_controls_button" onclick="showchat()">
            <i class="fas fa-comment-alt"></i>
            <span>Chat</span>
          </div>
        </div>
        <div class="main_controls_block">
          <div class="main_controls_button leave_red">
            <span class="leave_meeting"><a href="/">Leave Meeting</a></span>
          </div>
        </div>
      </div>
    </div>


    <img
      id="rain"
      src="../public/city.gif"
      alt="Animated GIF"
      style="display: block"
    />
    <img
      id="city"
      src="../public/rain.gif"
      alt="Animated GIF"
      style="display: none"
    />
    <img
      id="sea"
      src="../public/sea.gif"
      alt="Animated GIF"
      style="display: none"
    />
    <img
      id="laptop"
      src="../public/laptop.gif"
      alt="Animated GIF"
      style="display: none"
    />
    <img
      id="fireflies"
      src="../public/fireflies.gif"
      alt="Animated GIF"
      style="display: none"
    />
    <img
      id="tree"
      src="../public/tree.gif"
      alt="Animated GIF"
      style="display: none"
    />

